<%include ../partials/header%>

<div class="container">
    <h1 style="text-align: center">Edit <%=campground.name%></h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" name="name" method="POST">
            <div class="form-group">
                <input class="form-control" value="<%=campground.name%>" type="text" name="campground[name]" placeholder="name">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" value="<%=campground.description%>" name="campground[description]" placeholder="description">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" value="<%=campground.image%>" name="campground[image]" placeholder="image url">
            </div>
            <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </form>  
        <a href="/campgrounds" >go back to campgrounds</a>
    </div>
</div>

<%include ../partials/footer%>